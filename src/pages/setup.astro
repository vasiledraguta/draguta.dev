---
import Layout from '@/layouts/Layout.astro';
import { setup } from '@/data/setup';
import { LinkIcon } from '@phosphor-icons/react';
---

<Layout title='setup' description='hardware and software i use daily'>
  <section class='pt-16'>
    <h1 class='text-2xl font-medium mb-3 font-display'>setup</h1>
    <p class='text-muted/70 mb-12'>hardware and software i use daily.</p>

    <div class='space-y-10'>
      {
        setup.map((category) => (
          <div>
            <h2 class='text-sm font-medium mb-4 text-muted tracking-widest'>
              {category.title}
            </h2>
            <ul class='space-y-3'>
              {category.items.map((item) => (
                <li class='flex items-baseline justify-between gap-4'>
                  <div>
                    {item.link ? (
                      <a
                        href={item.link}
                        target='_blank'
                        rel='noopener noreferrer'
                        class='text-foreground hover:text-accent-hover hover:transition-colors'
                      >
                        {item.name}
                        <LinkIcon className='inline w-3.5 h-3.5 ml-1 opacity-40' />
                      </a>
                    ) : (
                      <span class='text-foreground'>{item.name}</span>
                    )}
                  </div>
                  {item.description && (
                    <span class='text-muted text-sm'>{item.description}</span>
                  )}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <a
      href='/'
      class='text-muted block mt-16 underline hover:text-foreground transition-colors'
      >back to home</a
    >
  </section>
</Layout>
